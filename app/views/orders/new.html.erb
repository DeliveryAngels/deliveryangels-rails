<h2 class="pick-items">Pick your items</h2>

<p>Select the items you need most:</p>

<%= form_with model: @order do |f| %>
	<%= f.fields_for :groceries do |g| %>
		<%= g.label :name %>
		<%= g.number_field :id %>
	<% end %>
	<%= f.text_area :preferences %>
	<%= f.submit "Confirm items", class: '-button' %>
<% end %>
